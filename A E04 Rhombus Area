#include <math.h>
#include <stdio.h>
#include <string.h>
#include <stdlib.h>
#include <assert.h>
#include <limits.h>
#include <stdbool.h>

int main() {
    long long int diag1; 
    scanf("%lld", &diag1);
    long long int diag2; 
    scanf("%lld", &diag2);
    float k;
    k=(diag1*diag2)/2.0;
    printf("%0.1f",k);
    return 0;
}
